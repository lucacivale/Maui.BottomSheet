<?xml version="1.0" encoding="utf-8" ?>
<bottomsheet:BottomSheet
    Opened="BottomSheet_Opened"
    PeekHeight="{bottomsheet:PeekView View={Reference PeekContent}}"
    States="Peek"
    x:Class="Plugin.Maui.BottomSheet.Sample.Views.CustomBottomSheet"
    x:DataType="vm:CustomBottomSheetViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:bottomsheet="http://pluginmauibottomsheet.com"
    xmlns:vm="clr-namespace:Plugin.Maui.BottomSheet.Sample.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <bottomsheet:BottomSheet.Content>
        <bottomsheet:BottomSheetContent>
            <ScrollView Padding="16,24,16,0" x:Name="PeekContent">
                <VerticalStackLayout Spacing="16">
                    <Label FontAttributes="Bold" Text="Name Change" />
                    <Entry
                        AutomationId="CustomBottomSheetNewusernameEntry"
                        ReturnCommand="{Binding SaveCommand}"
                        ReturnType="Done"
                        Text="{Binding Newusername, Mode=TwoWay}"
                        x:Name="NameNewusername" />
                    <Button
                        AutomationId="CustomBottomSheetSaveButton"
                        Command="{Binding SaveCommand}"
                        Text="Save" />
                    <Button
                        AutomationId="CustomBottomSheetCancelButton"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Magenta}"
                        BorderWidth="1"
                        Command="{Binding GoBackCommand}"
                        Text="Cancel"
                        TextColor="Black" />
                </VerticalStackLayout>
            </ScrollView>
        </bottomsheet:BottomSheetContent>
    </bottomsheet:BottomSheet.Content>
</bottomsheet:BottomSheet>