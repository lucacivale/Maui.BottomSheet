<ContentPage
    x:Class="TaskManager.Views.AddEditTaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TaskManager.Models"
    xmlns:vm="clr-namespace:TaskManager.ViewModels"
    Padding="10,10,10,20"
    x:DataType="vm:AddEditTaskViewModel">

    <ScrollView Margin="0,10,0,0">
        <StackLayout Spacing="16">

            <Border Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Task Title*"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <Entry
                        Margin="0,8,0,0"
                        FontSize="16"
                        Placeholder="Enter task title"
                        Text="{Binding Title}" />
                </StackLayout>
            </Border>

            <Border Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Description"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <Editor
                        Margin="0,8,0,0"
                        AutoSize="TextChanges"
                        FontSize="16"
                        HeightRequest="75"
                        Placeholder="Enter task description"
                        Text="{Binding Description}" />
                </StackLayout>
            </Border>

            <Border Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Due Date"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <DatePicker
                        Margin="0,8,0,0"
                        Date="{Binding DueDate}"
                        FontSize="16" />
                </StackLayout>
            </Border>

            <Border Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Priority"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <Picker
                        Margin="0,8,0,0"
                        FontSize="16"
                        SelectedItem="{Binding Priority}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type models:TaskPriority}">
                                <models:TaskPriority>Low</models:TaskPriority>
                                <models:TaskPriority>Medium</models:TaskPriority>
                                <models:TaskPriority>High</models:TaskPriority>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
            </Border>

            <Border
                Padding="16"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#2D2D2D}"
                IsVisible="{Binding IsEditMode}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Status"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <Picker
                        Margin="0,8,0,0"
                        FontSize="16"
                        SelectedItem="{Binding Status}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type models:TaskStatus}">
                                <models:TaskStatus>Todo</models:TaskStatus>
                                <models:TaskStatus>InProgress</models:TaskStatus>
                                <models:TaskStatus>Completed</models:TaskStatus>
                                <models:TaskStatus>Cancelled</models:TaskStatus>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
            </Border>

            <Border Padding="16" BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">
                <StackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Category"
                        TextColor="{AppThemeBinding Light=#1976D2,
                                                    Dark=#90CAF9}" />
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Entry
                            Grid.Column="0"
                            FontSize="16"
                            Placeholder="Enter or select category"
                            Text="{Binding Category}" />
                        <Picker
                            Title="ðŸ“‹"
                            Grid.Column="1"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding Category}" />
                    </Grid>
                </StackLayout>
            </Border>

            <Button
                BackgroundColor="#4CAF50"
                Command="{Binding SaveTaskCommand}"
                CornerRadius="25"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Save"
                TextColor="White" />

        </StackLayout>
    </ScrollView>
</ContentPage>