<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Plugin.BottomSheet.Tests.Maui.Ui.Application.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:shared="clr-namespace:Plugin.BottomSheet.Tests.Maui.Ui.Application.Shared"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button
                AutomationId="{x:Static shared:AutomationIds.OpenBottomSheetHeaderTestsPage}"
                Clicked="Button_OnClicked"
                Text="Open BottomSheetHeaderTests page" />

            <Button
                AutomationId="{x:Static shared:AutomationIds.OpenBottomSheetTestsPage}"
                Clicked="OpenBottomSheetTestsPage"
                Text="Open BottomSheetTests page" />

            <Button
                AutomationId="{x:Static shared:AutomationIds.OpenModalPageBottomSheetTestsPage}"
                Clicked="GoToModalPageBottomSheetTests"
                Text="Open ModalPageBottomSheetTestsPage" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
