<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Plugin.BottomSheet.Tests.Maui.Ui.Application.Views.Pages.ModalPageBottomSheetTestsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mauibottomsheet="http://pluginmauibottomsheet.com"
    xmlns:shared="clr-namespace:Plugin.BottomSheet.Tests.Maui.Ui.Application.Shared"
    Shell.PresentationMode="Modal">
    <ContentPage.Content>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button
                AutomationId="{x:Static shared:ModalPageBottomSheetTestsAutomationIds.CloseModalPage}"
                Clicked="Button_OnClicked"
                Text="Close" />
            <mauibottomsheet:BottomSheet AutomationId="{x:Static shared:ModalPageBottomSheetTestsAutomationIds.BottomSheet}" IsOpen="True">
                <mauibottomsheet:BottomSheetContent>
                    <Label HorizontalOptions="Center" Text="I'm something" />
                </mauibottomsheet:BottomSheetContent>
            </mauibottomsheet:BottomSheet>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>